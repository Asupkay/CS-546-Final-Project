<div>
    <article id="parties" class="text-center">
        {{#each parties}}
            <button id="{{this.partyId}}" class="party btn btn-primary">
                <p class="d-inline">Party Table:</p>
                <p class="number d-inline">{{this.tableNumber}}</p>
                </br>
                <p class="d-inline">Server:</p>
                <p class="name d-inline">{{this.serverName}}</p>
            </button>
        {{/each}}
        <div>
            <div class="d-inline">
                <p class="d-inline">Making order for table number: </p>
                <p id="partyTableNumber" class="d-inline"></p>
                <input id="tableNumberInput" type="text" placeholder="Table Number">
                <p class="d-inline">Server: </p>
                <p id="partyServerName" class="d-inline">{{user.username}}</p>
            </div>

        </div>
    </article>
    <div class="row">
        <article id="items" class="col">
            {{#each items}} 
                <button id="{{this.itemId}}" class="item btn btn-secondary" >
                    {{this.itemName}}
                </button>
            {{/each}} 
        </article>
        <article id="orderLog" class="col">
            <ul id="orderList">
            </ul>
        </article>
    </div>
    <button id="submitOrder" class="btn btn-primary float-right">Submit</button>
</div>
