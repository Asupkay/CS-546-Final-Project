<div>
    <article id="parties">
        {{#each parties}}
            <button id="{{this.partyId}}" class="party btn btn-primary">
                <p class="d-inline">Party Table:</p>
                <p class="name d-inline">{{this.tableNumber}}</p>
            </button>
        {{/each}}
        <div>
            <p class="d-inline">Making order for party: </p>
            <p id="partyId" class="d-inline">New</p>
        </div>
    </article>
    <div class="row">
        <article id="items" class="col">
            {{#each items}} 
                <button id="{{this.itemId}}" class="item btn btn-secondary" >
                    {{this.itemName}}
                </button>
            {{/each}} 
        </article>
        <article id="orderLog" class="col">
            <ul id="orderList">
            </ul>
        </article>
    </div>
    <button id="submitOrder">Submit</button>
</div>
